<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="?attr/colorDeleteAccountButtonHover" />
            <solid android:color="?attr/colorDeleteAccountButtonHover" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="?attr/colorAlert" />
            <solid android:color="?attr/colorDeleteAccountButton"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="@color/cardview_shadow_start_color" />
            <solid android:color="@color/grey" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="1dip" android:color="?attr/colorAlert" />
            <solid android:color="?attr/colorDeleteAccountButton" />
        </shape>
    </item>
</selector>