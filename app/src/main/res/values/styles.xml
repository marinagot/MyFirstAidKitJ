<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>


        <item name="colorAlert">@color/alert</item>
        <item name="colorPrimaryLight">@color/colorPrimaryLight</item>
        <item name="colorPrimaryText">@color/colorPrimaryText</item>
        <item name="colorSecondaryText">@color/colorSecondaryText</item>
        <item name="colorDivider">@color/darkColorDivider</item>
        <item name="colorIcons">@color/colorIcons</item>
        <item name="colorConnection">@color/connection</item>


        <item name="colorCard">@color/colorCard</item>
        <item name="colorDisabledCard">@color/disabled</item>
        <item name="colorDisabledCardBorder">@color/disabledBorder</item>
        <item name="colorCardTitle">@color/colorPrimary</item>
        <item name="colorDisabledCardTitle">@color/colorSecondaryText</item>

        <item name="colorButtonText">@color/colorIcons</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="colorAlert">@color/darkAlert</item>
        <item name="colorPrimaryLight">@color/darkColorPrimaryLight</item>
        <item name="colorPrimaryText">@color/darkColorPrimaryText</item>
        <item name="colorSecondaryText">@color/darkColorSecondaryText</item>
        <item name="colorDivider">@color/darkColorDivider</item>
        <item name="colorIcons">@color/darkColorIcons</item>
        <item name="colorConnection">@color/darkConnection</item>

        <item name="colorCard">@color/darkColorCard</item>
        <item name="colorDisabledCard">@color/darkDisabled</item>
        <item name="colorDisabledCardBorder">@color/darkDisabledBorder</item>
        <item name="colorCardTitle">@color/darkColorCardTitle</item>
        <item name="colorDisabledCardTitle">@color/colorSecondaryText</item>

        <item name="colorButtonText">@color/darkColorPrimaryText</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorPrimaryDark</item>
    </style>

</resources>
