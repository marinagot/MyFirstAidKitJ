<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>

        <item name="colorAlert">@color/red</item>
        <item name="colorPrimaryLight">@color/light_blue</item>
        <item name="colorPrimaryText">@color/color_21</item>
        <item name="colorSecondaryText">@color/color_75</item>
        <item name="colorDivider">@color/color_4E</item>
        <item name="colorIcons">@color/white</item>
        <item name="colorConnection">@color/green</item>

        <item name="colorCard">@color/white</item>
        <item name="colorDisabledCard">@color/color_AF_t_80</item>
        <item name="colorDisabledCardBorder">@color/color_63_t_80</item>
        <item name="colorCardTitle">@color/blue</item>
        <item name="colorDisabledCardTitle">@color/color_75</item>

        <item name="colorButtonText">@color/white</item>
        <item name="colorDeleteAccountButton">@color/white</item>
        <item name="colorDeleteAccountButtonHover">@color/color_AF_t_80</item>

        <item name="iconLaucher">@color/blue</item>

    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/color_18</item>
        <item name="colorPrimaryDark">@color/color_24</item>
        <item name="colorAccent">@color/dark_orange</item>

        <item name="colorAlert">@color/dark_red</item>
        <item name="colorPrimaryLight">@color/black</item>
        <item name="colorPrimaryText">@color/color_B8</item>
        <item name="colorSecondaryText">@color/color_75</item>
        <item name="colorDivider">@color/color_4E</item>
        <item name="colorIcons">@color/dark_orange</item>
        <item name="colorConnection">@color/dark_green</item>

        <item name="colorCard">@color/color_11</item>
        <item name="colorDisabledCard">@color/color_24</item>
        <item name="colorDisabledCardBorder">@color/color_3F</item>
        <item name="colorCardTitle">@color/orange</item>
        <item name="colorDisabledCardTitle">@color/color_75</item>

        <item name="colorButtonText">@color/orange</item>
        <item name="colorDeleteAccountButton">@color/color_18</item>
        <item name="colorDeleteAccountButtonHover">@color/color_3F</item>

        <item name="iconLaucher">@color/dark_orange</item>

        <item name="android:textColorSecondary">@color/orange</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/blue</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/dark_blue</item>
    </style>

</resources>
